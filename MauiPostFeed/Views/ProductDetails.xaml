<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIPostFeed.Views.ProductDetails"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Product Details">
    <ScrollView BackgroundColor="#eee">
        <VerticalStackLayout>
            <CarouselView
                HeightRequest="300"
                HorizontalScrollBarVisibility="Never"
                ItemsSource="{Binding product.images}"
                Loop="False"
                VerticalOptions="Start">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image
                            Aspect="AspectFit"
                            HeightRequest="300"
                            Source="{Binding}" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <VerticalStackLayout Margin="24,10" Spacing="10">
                <Label
                    FontFamily="OpenSansSemibold"
                    FontSize="Title"
                    Text="{Binding product.title}" />
                <Label
                    FontFamily="OpenSansRegular"
                    FontSize="Body"
                    Text="{Binding product.description}" />
                <Grid
                    Margin="0,10"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="30">
                    <HorizontalStackLayout>
                        <Label
                            FontFamily="OpenSansRegular"
                            FontSize="30"
                            Text="ðŸ’µ  $"
                            VerticalTextAlignment="Center" />
                        <Label
                            FontFamily="OpenSansRegular"
                            FontSize="40"
                            Text="{Binding product.price}" />
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Grid.Column="1">
                        <Label
                            FontFamily="OpenSansRegular"
                            FontSize="30"
                            Text="â­ï¸  "
                            VerticalTextAlignment="Center" />
                        <Label
                            FontFamily="OpenSansRegular"
                            FontSize="40"
                            Text="{Binding product.rating}" />
                    </HorizontalStackLayout>
                </Grid>
                <HorizontalStackLayout>
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="20"
                        Text="Stocks left: "
                        VerticalTextAlignment="Center" />
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="30"
                        Text="{Binding product.stock}" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="20"
                        Text="Brand: "
                        VerticalTextAlignment="Center" />
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="30"
                        Text="{Binding product.brand}" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="20"
                        Text="Category: "
                        VerticalTextAlignment="Center" />
                    <Label
                        FontFamily="OpenSansRegular"
                        FontSize="30"
                        Text="{Binding product.category}"
                        TextTransform="Uppercase" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>